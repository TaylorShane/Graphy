<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.shane_taylor.truthtables.Graph4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:configChanges="orientation|keyboardHidden"
    android:screenOrientation="landscape"
    android:weightSum="2"
    android:columnCount="2"
    android:background="@color/grey.9">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:columnCount="7"
        android:rowCount="6">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/linegraph"
            android:layout_width="700dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="centerInside" />
    </GridLayout>
    <GridLayout
        android:id="@+id/enterCoordinatesLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_gravity="center"
        android:columnCount="10"
        android:padding="20dp"
        android:rowCount="14">

        <TextView
            android:id="@+id/txtSimilarTriangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="10"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:text="@string/similarTriangleInstruciton1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/txtLineA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="10"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/txtLineB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="10"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/txtLineC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="10"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/txtEnterAlength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/lineAlength"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Enter the side lenghts: " />

        <EditText
            android:id="@+id/userLineA"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="4"
            android:gravity="center"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/txtEnterBlength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="@string/lineBlength"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Enter the side lenghts: " />

        <EditText
            android:id="@+id/userLineB"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_row="4"
            android:gravity="center"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/txtEnterClength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="4"
            android:text="@string/lineClength"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Enter the side lenghts: " />

        <EditText
            android:id="@+id/userLineC"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="5"
            android:layout_row="4"
            android:gravity="center"
            android:inputType="number|numberDecimal" />

        <Button
            android:id="@+id/submitUserData"
            android:text="@string/submit"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnSpan="10"
            android:layout_gravity="top|fill_horizontal"
            android:layout_margin="10dp"
            android:layout_row="10"
            android:gravity="center"
            android:maxLength="400"
            android:onClick="onClickVerify"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/random_values_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="10"
            android:layout_gravity="top|center_horizontal|fill_horizontal"
            android:layout_row="11"
            android:gravity="fill_horizontal|center"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btnReset"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnSpan="10"
            android:layout_gravity="top|fill_horizontal"
            android:layout_margin="10dp"
            android:layout_row="12"
            android:gravity="center"
            android:maxLength="400"
            android:onClick="onClickReset"
            android:text="@string/reset"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />
    </GridLayout>
</GridLayout>
