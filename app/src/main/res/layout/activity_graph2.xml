<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.shane_taylor.truthtables.Graph2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:configChanges="orientation|keyboardHidden">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.jjoe64.graphview.GraphView
            android:id="@+id/linegraph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1"
            android:scaleType="centerInside" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <GridLayout
            android:id="@+id/enterCoordinatesLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:columnCount="4"
            android:rowCount="10">
            <TextView
                android:id="@+id/lineInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_row="1"
                android:text="@string/lineInstruction1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:id="@+id/txtViewLineStart"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:gravity="bottom"
                android:text="@string/line_start_coordinates" />
            <TextView
                android:id="@+id/EnterXtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|end"
                android:layout_marginRight="10dp"
                android:layout_row="4"
                android:gravity="end"
                android:text="@string/EnterXTextView" />
            <EditText
                android:id="@+id/x1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="center|start"
                android:layout_margin="5dp"
                android:layout_marginEnd="20dp"
                android:layout_row="4"
                android:gravity="center"
                android:inputType="number|numberSigned"
                android:nextFocusDown="@+id/y1A" />
            <TextView
                android:id="@+id/EnterYtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center|end"
                android:layout_marginRight="10dp"
                android:layout_row="4"
                android:gravity="end"
                android:text="@string/EnterYTextView" />
            <EditText
                android:id="@+id/y1A"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_column="3"
                android:layout_gravity="center|start"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:gravity="center"
                android:inputType="number|numberSigned"
                android:nextFocusDown="@+id/x1B" />
            <TextView
                android:id="@+id/txtViewLineEnd"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:gravity="bottom"
                android:text="@string/line_end_coordinates" />
            <TextView
                android:id="@+id/EnterXtextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|end"
                android:layout_marginRight="10dp"
                android:layout_row="6"
                android:gravity="end"
                android:text="@string/EnterXTextView" />
            <EditText
                android:id="@+id/x1B"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="center|start"
                android:layout_marginEnd="20dp"
                android:layout_row="6"
                android:gravity="center"
                android:inputType="number|numberSigned"
                android:nextFocusDown="@+id/y1B" />
            <TextView
                android:id="@+id/EnterYtextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center|end"
                android:layout_marginRight="10dp"
                android:layout_row="6"
                android:gravity="end"
                android:text="@string/EnterYTextView" />
            <EditText
                android:id="@+id/y1B"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_column="3"
                android:layout_gravity="center|start"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:gravity="center"
                android:inputType="number|numberSigned" />
            <Button
                android:id="@+id/btnPlot"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="top|center_horizontal|fill_horizontal"
                android:layout_margin="10dp"
                android:layout_row="7"
                android:gravity="center_horizontal"
                android:maxLength="400"
                android:onClick="onClickPlot"
                android:text="@string/Plot" />
            <Button
                android:id="@+id/btnReset"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="top|center_horizontal|fill_horizontal"
                android:layout_margin="10dp"
                android:layout_row="8"
                android:gravity="center_horizontal"
                android:maxLength="400"
                android:onClick="onClickReset"
                android:text="@string/reset" />
            <Button
                android:id="@+id/btnTriangleGraph"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="top|center_horizontal|fill_horizontal"
                android:layout_margin="10dp"
                android:layout_row="9"
                android:gravity="center_horizontal"
                android:maxLength="400"
                android:onClick="onClickTriangleGraph"
                android:text="@string/triangle_graph" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>
