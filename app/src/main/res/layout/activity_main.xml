<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.shane_taylor.truthtables.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/TruthOrNot"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/truthTableImageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_gravity="top|center_horizontal"
        android:gravity="top|center_horizontal"
        android:src="@drawable/truth_table"
        android:contentDescription="" />

    <ScrollView
        android:id="@+id/MainScrollView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/AthenDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:isScrollContainer="true"
            android:maxLines="50"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:text="@string/explained"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="graphActivity"
        android:text="@string/see_graph" />
</LinearLayout>
