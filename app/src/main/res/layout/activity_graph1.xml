<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="8"
    tools:context="com.shane_taylor.truthtables.Graph1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="centerInside"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="8">


            <TextView
                android:id="@+id/EnterXtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="@string/EnterXTextView" />

            <EditText
                android:id="@+id/xplot"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="top|left"
                android:layout_margin="2dp"
                android:layout_row="0"
                android:gravity="top|center_horizontal"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/EnterYtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_row="1"
                android:gravity="center_horizontal"
                android:text="@string/EnterYTextView" />

            <EditText
                android:id="@+id/yplot"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="top|left"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:gravity="top|center_horizontal"
                android:inputType="number|numberSigned" />

            <Button
                android:id="@+id/btnPlot"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="top|center_horizontal"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:onClick="onClickPlot"
                android:text="@string/Plot" />

            <Button
                android:id="@+id/btnLineGraph"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_column="0"
                android:layout_gravity="top|center_horizontal"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:onClick="onClickLineGraph"
                android:text="@string/line_graphs" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>
